<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.text.ysq.lanrenzhoumo.Fragment.PersonFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/fragment_person_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/person_bg_unlogin"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="20dp">
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_person_order"
                    android:text="我预定的"
                    android:background="#00FFFFFF"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#D2D2D2"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:drawableTop="@drawable/ic_person_interest"
                    android:text="兴趣标签"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#D2D2D2"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:drawableTop="@drawable/ic_person_setting"
                    android:text="设置"
                    />
            </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/default_two"
                />
            <TextView
                android:id="@+id/fragment_person_view"
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:background="#D2D2D2"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我收藏的活动"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/fragment_person_view"
                android:layout_alignParentBottom="true"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D2D2D2"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </ScrollView>
</FrameLayout>
