<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.text.ysq.lanrenzhoumo.Fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="懒人周末"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>
        <TextView
            android:id="@+id/home_list_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1EFEC"
            android:layout_below="@id/home_list_title"/>
    <ListView
        android:id="@+id/home_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_list_line"/>
    </RelativeLayout>

</FrameLayout>
